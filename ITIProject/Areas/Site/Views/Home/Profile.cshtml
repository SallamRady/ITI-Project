@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Site/Views/Shared/_Layout.cshtml";
}
<div class="page-header page-header-xs" data-parallax="true" style="background-image: url(&quot;/Areas/Site/Content/assets/img/fabio-mangione.jpg&quot;); transform: translate3d(0px, 0px, 0px);">
    <div class="filter"></div>
</div>
<div class="container" style="margin-top: 80px;">
    <div class="owner">
        <div class="avatar">
            <img src="@Model.Image" alt="Circle Image"  class="img-circle img-no-padding img-responsive">
        </div>
        <div class="name">
            <h4 class="title">
                @User.Identity.GetUserName()
                <br>
            </h4>
            <h6 class="description">@Model.Role</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 ml-auto mr-auto text-center">
            <p>  As a student at ITI Academy, you are able to join educational courses, either free or paid.
                Do not forget to constantly improve your skills and do not listen to haters
                "The mountains are steadfast despite the wind," Salam Rad </p>
            <br>
            <a href="#" class="btn btn-outline-default btn-round"><i class="fa fa-cog"></i> Settings</a>
        </div>
    </div>
    <br>
    <div class="nav-tabs-navigation">
        <div class="nav-tabs-wrapper">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#follows" role="tab">Follows</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#following" role="tab">Following</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- Tab panes -->
    <div class="tab-content following">
        <div class="tab-pane active" id="follows" role="tabpanel">
            <div class="row">
                <div class="col-md-6 ml-auto mr-auto">
                    <ul class="list-unstyled follows">
                        <li>
                            <div class="row">
                                <div class="col-lg-2 col-md-4 col-4 ml-auto mr-auto">
                                    <img src="~/Areas/Site/Content/assets/img/ilya-yakover.jpg" alt="Circle Image" style="height: 60px;" class="img-circle img-no-padding img-responsive">
                                </div>
                                <div class="col-lg-7 col-md-4 col-4  ml-auto mr-auto">
                                    <h6>
                                        ITI Academy
                                        <br>
                                        <small>Educational WebSite</small>
                                    </h6>
                                </div>
                                <div class="col-lg-3 col-md-4 col-4  ml-auto mr-auto">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" value="" checked="" readonly>
                                            <span class="form-check-sign"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="tab-pane text-center" id="following" role="tabpanel">
            <h3 class="text-muted">Not following anyone yet :(</h3>
        </div>
    </div>
</div>