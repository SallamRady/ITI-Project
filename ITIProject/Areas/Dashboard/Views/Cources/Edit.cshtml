@model ITIProject.Models.DBFiles.Cource

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h2>Edit Course</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Free, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                <div class="checkbox">
                     <select name="Free" style="padding:5px">
                       <option value="false" @if(Model.Free == false){<text>selected</text>}>Free</option>
                        <option value="true" @if(Model.Free == true){<text>selected</text>}>Not Free</option>
                     </select>
                    @Html.EditorFor(model => model.Free)
                    @Html.ValidationMessageFor(model => model.Free, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Degree, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.MinDegree, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinDegree, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinDegree, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Course_Department_ID, "Course_Department_ID", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Course_Department_ID", null, htmlAttributes: new { @style="padding:5px" })
                @Html.ValidationMessageFor(model => model.Course_Department_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Course_Professor_ID, "Course_Professor_ID", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Course_Professor_ID", null, htmlAttributes: new { @style="padding:5px" })
                @Html.ValidationMessageFor(model => model.Course_Professor_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-success"
       href="/Dashboard/Cources/Index"
       title="Edit"
       style="cursor:pointer;max-height: 35px;text-align: center;">
        <span class="material-icons">list</span>
        <b>Back to List</b>
    </a>
</div>
