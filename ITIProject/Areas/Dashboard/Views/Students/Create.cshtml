@model ITIProject.Models.DBFiles.Student

@{
    ViewBag.Title = "Create";
}

<h2>Create Student</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control",@placeholder="  Student Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label " })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "  Student City" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", @placeholder = "  Student Level" } })
                @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.BirthYear, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BirthYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "  Student Birth Year" } })
                @Html.ValidationMessageFor(model => model.BirthYear, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
                <label class = "control-label">Student Department</label> 
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Student_Department_ID", null, htmlAttributes: new { style="padding:5px" })
                @Html.ValidationMessageFor(model => model.Student_Department_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-md-2">
               <label class="control-label">Student's Supervisior</label>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Student_Professor_supervisior_ID", null, htmlAttributes: new { @style="padding:5px" })
                @Html.ValidationMessageFor(model => model.Student_Professor_supervisior_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group text-center">
            <input type="submit" value="Create" class="btn btn-danger " style="min-width: 110px;min-height: 40px;font-size: 15px;font-weight: 700;" />
        </div>
    </div>
}

<div>
    <a class="btn btn-info"
       href="/Dashboard/Students/Index"
       title="Edit"
       style="cursor:pointer;max-height: 35px;text-align: center;">
        <span class="material-icons">list</span>
        <b>Back to List</b>
    </a>
   
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
